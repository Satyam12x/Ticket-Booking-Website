{
  "version": 2,
  "builds": [
    {
      "src": "cinema-frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "out" }
    },
    {
      "src": "cinema-backend/src/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/cinema-backend/src/index.ts" },
    { "src": "/(.*)", "dest": "/cinema-frontend/$1" }
  ]
}
